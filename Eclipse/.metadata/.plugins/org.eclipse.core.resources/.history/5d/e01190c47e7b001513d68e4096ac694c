package Face;

import org.jointheleague.graphical.robot.Robot;

public class Face
{
	public static void main(String[] args)
	{
		new Face();
	}

	public Face()
	{
		Robot tommy = new Robot();
		tommy.setSpeed(10);
		mouth(tommy);
		//eyes(tommy);
		//nose(tommy);
		// tommy.move(500);
	}

	void eyes(Robot r)
	{
		r.penDown();
		for (int i = 0; i < 360; i++)
		{
			r.move(1);
			r.turn(1);
		}
		for (int i = 0; i < 360; i++)
		{
			r.move(1);
			r.turn(-1);
		}
		r.penUp();
	}

	void nose(Robot r)
	{
		r.penDown();
		r.turn(150);
		for (int i = 0; i < 3; i++)
		{
			r.move(200);
			r.turn(120);
		}
		r.penUp();
		r.turn(210);
	}

	void mouth(Robot r)
	{
		r.turn(180);
		r.penDown();
		r.move(350);
		r.turn(90);
		for (int i = 0; i < 60; i++)
		{
			r.move(2);
			r.turn(-1);
		}
	}
}
